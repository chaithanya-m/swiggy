<div>
  <div>
    <button id="search-restaurants">restaurant</button>
    <button id="search-dishes">dish</button>
  </div>
  <div>
    <% if @food_items.any? %>
  <div class="row">
    <% @food_items.each do |item|%>
    <div class="col-6">
      <%= link_to (restaurant_path(item.restaurant)) do%>
      <div>
        <b><%= item.restaurant.name %></b>
        <small><%= item.restaurant.area %></small>
      </div>
      <% end %>
      <hr/>
      <div class="row">
        <div class="col-9">
          <h5><%= item.name %></h5>
          <small><%= item.price%></small>
        </div>
        <div class="col-3">

        </div>
        
      </div>
    </div>
    <% end %>
  </div>
  <% else%>
  <div>
    <h6> no item found</h6>
  </div>
  <%end%>
  </div>

</div>