<%= render 'homes/header' %>

<div class="body_center" >
  <div >
    <div class="row">
      <div class="col-1"></div>
      <div class="col-10 search-field">
        <span>
          <%= form_with url: root_path, method: :get do |form| %>
          <%= form.text_field :search, placeholder: 'Search for restaurants and food', class:["serarch-input-field"]%>
          <span class="icon-magnifier">  <i class="fa fa-search search-icon"></i></span>
          <% end %>
        </span>
      </div>
      <div class="col-1"></div>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-10">
        <div class="search-body">
          <div>
            <h6>Recent Searches</h6>
            <br>
            <br>
          </div>
          <div>
            <h5>Popular Cuisines</h5>
            <div class="horizontal-scroll">
              <% @categories.each do |category| %>
                <div class="scroll-content"><%= category.name %></div>
              <% end %>
            </div>
          </div>
      </div>
      <div class="col-1"></div>

    </div>
    
    </div>
    
  </div>

</div>