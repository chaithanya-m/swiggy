<div class="main_body">
  <h4>Categories</h4>
  <div class="horizontal-scroll">
    <% categories.each do |category| %>
      <div class="scroll-content"><%= category.name %></div>
    <% end %>
  </div>
  <div>
  <%= form_tag(filter_homes_path, method: 'get') do %>
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <div style="margin-right: 10px;">
        <%= button_tag '300-600', name: 'options_filter', type: 'submit', value: '300-600' %>
        <%= button_tag 'Below 300', name: 'options_filter', type: 'submit', value: 'Below 300' %>
        <%= button_tag 'New', name: 'options_filter', type: 'submit', value: 'New' %>
        <%= button_tag 'Pure Veg', name: 'options_filter', type: 'submit', value: 'Pure Veg' %>
      </div>
    </div>
  <% end %>
  
  </div>
  <div>
  <h4> Restaurants</h4>
  	<div class="row">
  		<% restaurants.each do |restaurant| %> 
  		<div class="col-4 ">
      <%= link_to restaurant_path(restaurant), :action => 'go' do %>
  			<b><%= restaurant.name %></b><br>
  			<%= restaurant.spaciality %><br>
  			<%= restaurant.area %>
        <% end %>
  		</div>
  		<% end %>
  	</div>
  </div>
  

</div>