<!-- app/views/addresses/new.html.erb -->

<h1>New Address</h1>


<%= form_for([current_user, @address]) do |f| %>
  <div class="field">
    <%= f.label :door_number %>
    <%= f.text_field :door_number %>
  </div>

  <div class="field">
    <%= f.label :streetarea %>
    <%= f.text_field :street_area %>
  </div>

  <div class="field">
  <%= f.label :city %>
  <%= f.text_field :city %>
</div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Address' %>
  </div>
<% end %>

<%= link_to 'Back', profile_user_path(current_user) %>
