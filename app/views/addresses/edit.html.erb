<!-- app/views/addresses/edit.html.erb -->

<h1>Edit Address</h1>


<%= form_for([current_user, @address], url: user_address_path(current_user, @address), turbo_method: :patch) do |f| %>
  <div class="field">
    <%= f.label :door_number %>
    <%= f.text_field :door_number %>
  </div>

  <div class="field">
    <%= f.label :street_area %>
    <%= f.text_field :street_area %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Address' %>
  </div>
<% end %>

<%= link_to 'Cancel', user_path(current_user) %>
